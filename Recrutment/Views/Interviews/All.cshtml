<div class="container">
    <div class="section">
        <div class="row">
            <div class="mb-5 pb-5 col-lg-12">
                <div class="page-header text-center">
                    <h2 id="tables">Interviews</h2>
                </div>

                <!--<div class="d-flex justify-content-center">
        <a class="btn btn-block btn-primary text-white mb-3" href="/Interviews/Create">Create Interview</a>
    </div>-->

                <div class="component">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Date</th>
                                <th scope="col">Candidate</th>
                                <th scope="col">Recruiter</th>
                                <th scope="col">Job</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var interview in Model)
                            {
                <tr class="table-light">
                    <th scope="row">@interview.Date</th>
                    <td>@interview.CandidateName</td>
                    <td>@interview.RecruiterName</td>
                    <td>@interview.JobName</td>

                    <td>
                        <a class="btn btn-block btn-primary text-white mb-3" href="/Interviews/Details?id=@interview.Id">Details</a>
                    </td>
                    <td>
                        <a class="btn btn-block btn-danger text-white mb-3" href="/Interviews/Delete?id=@interview.Id">Delete</a>
                    </td>

                </tr>
                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>