

<div class="container">
    <div class="section">
        <div class="row">
            <div class="mb-5 pb-5 col-md-8 offset-md-2">

                <nav aria-label="breadcrumb mt-5 mb-5">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                        <li class="breadcrumb-item"><a href="/Interviews/All">Interviews</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Details</li>
                    </ol>
                </nav>

                <div class="page-header text-center mb-5 mt-5">
                    <h2 id="tables">Interview Details</h2>
                </div>


                <div class="card text-center">
                    <div class="card-header">
                        <h5 class="card-title">Date: <span class="text-black-50">@Model.Date </span></h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><span class="text-black-50">Candidate: </span>@Model.CandidateName</li>
                            <li class="list-group-item"><span class="text-black-50">Recruiter: </span> @Model.RecruiterName</li>
                            <li class="list-group-item"><span class="text-black-50">Job: </span> @Model.JobName</li>
                            <li class="list-group-item"></li>
                        </ul>
                    </div>
                    <div class="pt-0 card-body">
                        <a href="/Interviews/Delete?id=@Model.Id" class="btn btn-primary">Delete</a>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>