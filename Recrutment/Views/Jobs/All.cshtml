

<div class="container">
    <div class="section">
        <div class="row">
            <div class=" mb-5 pb-5 col-lg-12">
                <div class="page-header text-center">
                    <h2 id="tables">Jobs</h2>
                </div>

                <div class="d-flex justify-content-center">
                    <a class="btn btn-block btn-primary text-white mb-3" href="/Jobs/Create">Create Job</a>
                </div>

                <form class="mx-auto w-50 mt-2" method="get">
                    <div class="form-group">
                        <div class="text-dark d-flex justify-content-center">
                            <label for="name" class="h4 mb-2">Filter Jobs By Skill Name</label>
                        </div>
                        <input type="text" class="form-control" id="name" name="skill" />

                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-block btn-primary text-white" value="search">Search</button>
                    </div>
                </form>

                <div class="page-header text-center mt-5">
                    @if (Model.SkillName == null)
                    {
                        <h2 id="tables" class="text-info btn-light text-md-center p-2">All Jobs</h2>
                    }
                    @if (Model.SkillName != null)
                    {
                        <h2 id="tables" class="text-info btn-light text-md-center p-2">@Model.SkillName Jobs</h2>
                    }
                </div>

                <div class="component">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Title</th>
                                <th scope="col">Interviews</th>
                                <th scope="col">Salary</th>
                                <th scope="col">Skills</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var job in Model.Jobs)
                            {
                <tr class="table-light">
                    <th scope="row">@job.Title</th>
                    <td>@job.Interviews</td>
                    <td>@job.Salary</td>

                    <td>
                        <ul class="list-unstyled p-0">
                            @foreach (var skill in job.JobSkills)
                            {
            <li>@skill.Name</li>
            }
                        </ul>
                    </td>
                    <td>
                        <a class="btn btn-block btn-info text-white mb-3" href="/Skills/Add?id=@job.Id">Add Skill</a>
                    </td>

                    <td>
                        <a class="btn btn-block btn-primary text-white mb-3" href="/Jobs/Details?id=@job.Id">Details</a>
                    </td>

                    <td>
                        <a class="btn btn-block btn-danger text-white mb-3" href="/Jobs/Delete?id=@job.Id">Delete</a>
                    </td>
                </tr>
                }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>